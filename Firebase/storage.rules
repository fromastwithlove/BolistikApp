rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read for specific files (e.g., public images)
    match /public/{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to read and write their own files
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow only authenticated users to read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Restrict all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

